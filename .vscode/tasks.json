{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "GHDL Analyze",
            "type": "shell",
            "command": "ghdl",
            "args": [
                "-a",
                "${file}"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Run Simulation",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "ghdl -e testbench && ghdl -r testbench --vcd=wave.vcd && gtkwave wave.vcd"
            ],
            "group": "build",
            "problemMatcher": []
        }
    ]
}

    

